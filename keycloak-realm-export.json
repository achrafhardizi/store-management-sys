{
  "id": "sdia-realm",
  "realm": "sdia-realm",
  "enabled": true,
  "sslRequired": "external",
  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "User Role"
      },
      {
        "name": "ADMIN",
        "description": "Admin Role"
      }
    ]
  },
  "users": [
    {
      "username": "user1",
      "enabled": true,
      "email": "user1@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "1234",
          "temporary": false
        }
      ],
      "realmRoles": ["USER"]
    },
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "1234",
          "temporary": false
        }
      ],
      "realmRoles": ["USER", "ADMIN"]
    }
  ],
  "clients": [
    {
      "clientId": "product-service",
      "enabled": true,
      "bearerOnly": true,
      "protocol": "openid-connect"
    },
    {
      "clientId": "order-service",
      "enabled": true,
      "bearerOnly": true,
      "protocol": "openid-connect"
    },
    {
      "clientId": "react-client",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "redirectUris": ["http://localhost:3000/*", "http://localhost:3000"],
      "webOrigins": ["*"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true
    }
  ]
}
